<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correo.Validacion_Code_Activity">

    <include
        layout="@layout/action_bar_toolbar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/capturw"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:textSize="22dp"
            android:layout_marginTop="-20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Se ha enviado un c贸digo de verificaci贸n al Correo electr贸nico: "/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/correo_electr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correoo"
            android:textAlignment="center"
            android:textSize="35dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo Validaci贸n:"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/Code_EditText"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#4BAFA7"
            android:hint="Codigo" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:text="Validar Codigo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>