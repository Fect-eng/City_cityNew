<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPS.BotonPanic_Activity">

    <include
        layout="@layout/action_bar_toolbar">
    </include>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="-156dp"
        android:padding="-18dp"
        android:src="@drawable/capturw"/>

    <ImageView
        android:id="@+id/ImageBTN"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/sirena"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESIONE EN CASO DE EMERGENCIA"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="360dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="600dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="Posicion Actual"/>


            <EditText
                android:id="@+id/EditTextLatitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E15E5E"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:hint="Posicion Norte - Latitud" />

            <EditText
                android:id="@+id/EditTextLongitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55E435"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:hint="Posicion Sur - Longitud"
                />

            <TextView
                android:id="@+id/EditText_NumberCritico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:textSize="18dp"
                android:textAlignment="center"
                android:padding="5dp"

                android:textColor="#FBFBFB"
                android:text="Numero Critico"
                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>