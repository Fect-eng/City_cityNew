<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.Registro_Activity">

    <include
        layout="@layout/action_bar_toolbar">
    </include>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:orientation="vertical"
        android:layout_marginTop="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVisualizador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"

                android:textAlignment="center"
                android:textColor="#100404"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-30dp"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_face_6_24"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:hint="Nombres Completos"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_Nombres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_face_3_24_women"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:hint="Apellidos Completos"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_Apellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_phonelink_ring_24"
                    app:helperText="*Digitos Requeridos"
                    android:layout_marginTop="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    android:layout_gravity="center"
                    android:hint="Teléfono Celular"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_Telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="phone"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_emoji_people_24"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:hint="Direccion donde vive Usted"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_Apellidoss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_place_24"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:hint="Referencia donde vive Usted"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_Referencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_baseline_attach_email_24"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:hint="Correo Electronico"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Register_editText_CorreoE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/TXT_Terminos_Condiciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:text="Acepto los Terminos y Condiciones del uso de la Aplicación"
                        />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Btn_RegistrarUsuario"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#3F51B6"
                android:padding="2dp"
                android:text="Registrarme !!"
                android:textSize="26dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="672dp" />
            <!--  En este lado le agregamos un hint si vas a usar base datos -->
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>